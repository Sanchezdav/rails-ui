<div role="alert" class="relative w-full rounded-lg border p-4 [&>svg~*]:pl-7 [&>svg+div]:translate-y-[-3px] [&>svg]:absolute [&>svg]:left-4 [&>svg]:top-4 <%= variant_classes %>">
  <% if icon %>
    <%= icon_svg.html_safe %>
  <% end %>
  <% if title? %>
    <h5 class="mb-1 font-medium leading-none tracking-tight">
      <%= title %>
    </h5>
  <% end %>
  <div class="text-sm [&_p]:leading-relaxed">
    <%= content %>
  </div>
</div>