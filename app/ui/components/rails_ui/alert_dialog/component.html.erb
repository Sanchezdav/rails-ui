<%# app/components/rails_ui/alert_dialog/component.html.erb %>
<div data-controller="ui-alert-dialog"
     data-ui-alert-dialog-close-on-click-outside-value="<%= close_on_click_outside %>">
  <% if trigger %>
    <%= trigger %>
  <% end %>

  <div data-ui-alert-dialog-target="overlay" 
       class="fixed inset-0 z-50 bg-background/80 backdrop-blur-sm data-[ui-alert-dialog-state=open]:animate-in data-[ui-alert-dialog-state=closed]:animate-out data-[ui-alert-dialog-state=closed]:fade-out-0 data-[ui-alert-dialog-state=open]:fade-in-0" 
       data-ui-alert-dialog-state="closed" 
       aria-hidden="true"
       style="display: none;">
  </div>
  
  <div data-ui-alert-dialog-target="content" 
       role="alertdialog" 
       data-ui-alert-dialog-state="closed" 
       class="fixed left-[50%] top-[50%] z-50 grid w-full max-w-lg translate-x-[-50%] translate-y-[-50%] gap-4 border bg-background p-6 shadow-lg duration-200 data-[ui-alert-dialog-state=open]:animate-in data-[ui-alert-dialog-state=closed]:animate-out data-[ui-alert-dialog-state=closed]:fade-out-0 data-[ui-alert-dialog-state=open]:fade-in-0 data-[ui-alert-dialog-state=closed]:zoom-out-95 data-[ui-alert-dialog-state=open]:zoom-in-95 data-[ui-alert-dialog-state=closed]:slide-out-to-left-1/2 data-[ui-alert-dialog-state=closed]:slide-out-to-top-[48%] data-[ui-alert-dialog-state=open]:slide-in-from-left-1/2 data-[ui-alert-dialog-state=open]:slide-in-from-top-[48%] sm:rounded-lg md:w-full"
       style="display: none;">
    <div class="flex flex-col space-y-2 text-center sm:text-left">
      <h2 class="text-lg font-semibold"><%= title %></h2>
      <p class="text-sm text-muted-foreground"><%= description %></p>
    </div>
    <div class="flex flex-col-reverse sm:flex-row sm:justify-end sm:space-x-2">
      

      <%= render(RailsUi::Button::Component.new(variant: :outline, size: :sm, data: {action: "ui-alert-dialog#cancel #{on_cancel}" } )) { cancel_text } %>
      <%= render(RailsUi::Button::Component.new(variant: :default, size: :sm, data: {action: "ui-alert-dialog#close #{on_action}" } )) { action_text} %>

    </div>
  </div>
</div>