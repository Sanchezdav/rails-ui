
<%= render(RailsUi::ComponentPreview::Component.new(title: "Avatar Skeleton")) do |component| %>
  <% component.with_example do %>
    <%= render(RailsUi::Skeleton::Component.new) %>
  <% end %>
<% end %>

<%= render(RailsUi::ComponentPreview::Component.new(title: "Card Skeleton")) do |component| %>
  <% component.with_example do %>
    <%= render(RailsUi::Skeleton::Component.new(variant: :card)) %>
  <% end %>
<% end %>

<%= render(RailsUi::ComponentPreview::Component.new(title: "Custom Avatar Skeleton")) do |component| %>
  <% component.with_example do %>
    <%= render(RailsUi::Skeleton::Component.new(
      avatar_size: 'h-16 w-16',
      lines: 3,
      line_widths: ['300px', '250px', '200px']
    )) %>
  <% end %>
<% end %>

<%= render(RailsUi::ComponentPreview::Component.new(title: "Custom Card Skeleton")) do |component| %>
  <% component.with_example do %>
    <%= render(RailsUi::Skeleton::Component.new(
      variant: :card,
      card_size: 'h-[150px] w-[300px]',
      lines: 4,
      line_widths: ['300px', '280px', '260px', '240px']
    )) %>
  <% end %>
<% end %>